{
  "languageserver": {
    "ccls": {
      "command": "/usr/local/opt/ccls/bin/ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        },
        "clang": {
          "extraArgs": [
            "-I/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/include/c++/v1",
            "-I/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/lib/clang/12.0.0/include",
            "-I/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/include",
            "-I/Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX.sdk/usr/include",
            "-I/usr/local/Cellar/check/0.15.2/include"
          ]
        }
      }
    }
  },
  "suggest.noselect": false,
  "snippets.loadFromExtensions": false,
  "snippets.ultisnips.directories": [
    "~/.vim/ultisnips"
  ],
  "java.errors.incompleteClasspath.severity": "ignore"
}
